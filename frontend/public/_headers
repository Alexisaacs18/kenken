# Cache control headers for Cloudflare Pages
# HTML files should never be cached to ensure users get the latest version
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Static assets can be cached but with version query params
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Favicons and manifest (versioned via query params)
/*.svg
  Cache-Control: public, max-age=86400
/*.ico
  Cache-Control: public, max-age=86400
/*.png
  Cache-Control: public, max-age=86400
/*.webmanifest
  Cache-Control: public, max-age=86400

